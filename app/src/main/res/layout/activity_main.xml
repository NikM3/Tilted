<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/blankView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='"      "' />

            <TextView
                android:id="@+id/playerColumnTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="You" />

            <TextView
                android:id="@+id/goalColumnTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Goal" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/directionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/direction_label" />

            <TextView
                android:id="@+id/playerDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sensor_format" />

            <TextView
                android:id="@+id/goalDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sensor_format" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/pitchLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pitch_label" />

            <TextView
                android:id="@+id/playerPitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sensor_format" />

            <TextView
                android:id="@+id/goalPitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sensor_format" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/rollLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/roll_label" />

            <TextView
                android:id="@+id/playerRoll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sensor_format" />

            <TextView
                android:id="@+id/goalRoll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sensor_format" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/countdownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>